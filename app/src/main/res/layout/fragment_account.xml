<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null"
    android:orientation="vertical"
    tools:context="com.example.fragment.AccountManagementFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:background="#959393"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingTop="40dp"
        android:paddingRight="20dp"
        android:paddingBottom="40dp">

        <ImageButton
            android:id="@+id/imb_edit_account"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:background="@null"
            android:src="@drawable/ic_account_circle_24" />

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_account_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Văn Đạo"
                android:fontFamily="@font/nunitobold"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_account_mail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunitobold"
                android:text="daocvv20411@gmail.com"
                android:textColor="#C6BEBE"
                android:textSize="15sp" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_LogOut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/bgbutton"
            android:gravity="center"
            android:fontFamily="@font/nunitobold"
            android:text="Log Out" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="370dp"
        android:layout_height="356dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/khungchunhat"
        android:orientation="vertical"
        android:padding="10dp">

        <Button
            android:id="@+id/btn_MyPurchase"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_margin="2dp"
            android:fontFamily="@font/nunitobold"
            android:backgroundTint="#FFFCFC"
            android:drawableLeft="@drawable/mypurchase"
            android:text="My purchase"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/btn_Notification"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_margin="2dp"
            android:backgroundTint="#FFFCFC"
            android:fontFamily="@font/nunitobold"
            android:drawableLeft="@drawable/notification"
            android:text="Notification-On"
            android:textColor="@color/black"
            />


        <Button
            android:id="@+id/btn_Wishlist"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_margin="2dp"
            android:backgroundTint="#FFFCFC"
            android:drawableLeft="@drawable/wishlist"
            android:fontFamily="@font/nunitobold"
            android:text="Wishlist"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/btn_Chat"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_margin="2dp"
            android:backgroundTint="#FFFCFC"
            android:fontFamily="@font/nunitobold"
            android:drawableLeft="@drawable/chat"
            android:text="Chat With The Godzilla"
            android:textColor="@color/black"
            />
    </LinearLayout>
