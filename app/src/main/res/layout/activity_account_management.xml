<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AccountManagement"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="#031824"
        android:gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Account"
            android:textSize="26sp"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textStyle="bold"/>

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:padding="40dp"
        android:layout_gravity="center"
        android:background="#959393">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/profile2"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Văn Đạo"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000000"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="daocvv20411@gmail.com"
                android:textSize="15sp"
                android:textColor="#C6BEBE"/>

        </LinearLayout>

        <Button
            android:id="@+id/btn_LogOut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/bgbutton"
            android:gravity="center"
            android:text="Log Out"/>

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:background="@drawable/khungchunhat">

        <Button
            android:id="@+id/btn_MyPurchase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="My purchase"
            android:layout_margin="10dp"
            android:textColor="@color/black"
            android:backgroundTint="#FFFCFC"
            android:drawableLeft="@drawable/mypurchase"/>

        <Button
            android:id="@+id/btn_Notification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Notification"
            android:layout_margin="10dp"
            android:textColor="@color/black"
            android:backgroundTint="#FFFCFC"
            android:drawableLeft="@drawable/notification"/>

        <Button
            android:id="@+id/btn_Wishlist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Wishlist"
            android:layout_margin="10dp"
            android:textColor="@color/black"
            android:backgroundTint="#FFFCFC"
            android:drawableLeft="@drawable/wishlist"/>

        <Button
            android:id="@+id/btn_Chat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chat With The Godzilla"
            android:layout_margin="10dp"
            android:textColor="@color/black"
            android:backgroundTint="#FFFCFC"
            android:drawableLeft="@drawable/chat"/>
    </LinearLayout>
</LinearLayout>